{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"plugins": [{ "name": "@astrojs/ts-plugin" }],
		"strict": true
	},
	"include": ["./**/*"],
	"exclude": ["dist", "node_modules"]
}
